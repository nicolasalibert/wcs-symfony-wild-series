{% extends "base.html.twig" %}

{% block content %}
    <h1>{{program.title}}</h1>
    <h2>Saison {{season.number}}</h2>
    <ul>
        <li>
            Année : {{season.year}}
        </li>
        <li>
            Description : {{season.description}}
        </li>
        <li>
            Liste des épisodes :
            <ul>
                {% for episode in season.episodes %}
                    <li><a href="{{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id}) }}">{{episode.number}}</a> : {{episode.title}}</li>
                {% endfor %}
            </ul>
        </li>
    </ul>


    <a href="{{ path('program_show', {id: program.id}) }}">Retour au programme</a>
{% endblock content %}